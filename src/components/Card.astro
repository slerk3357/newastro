---
import { linkCard } from "./Card.css";
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;

export type { Props as CardProps };
---

<li class={linkCard}>
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>